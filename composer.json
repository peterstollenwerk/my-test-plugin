{
    "name": "peterstollenwerk/my-test-plugin",
    "description": "test",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Stollenwerk",
            "email": "peter.stollenwerk@aufdesign.de"
        }
    ],
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "getkirby/composer-installer": "^1.1.4"
    },
    "require-dev": {
        "getkirby/cms": "^3.4.2",
        "phpunit/phpunit": "^9.3.8",
        "spatie/phpunit-watcher": "^1.10"
    },
    "scripts": {
        "test": "/Applications/MAMP/bin/php/php7.4.2/bin/php ./vendor/bin/phpunit  --bootstrap ./tests/bootstrap.php --testdox ./tests/suites --colors=always",
        "watch": "./vendor/bin/phpunit-watcher watch  --bootstrap ./tests/bootstrap.php --testdox ./tests/suites --colors=always"
    }
}
